<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Kanban</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

	</head>

	<body class="body-index">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<label for="status">Cadastrar</label>
				
			</div>
			
		</nav>

	    <div class="container">

	    	<% if(validacao.length > 0) { %>
	    		<div class="alert alert-danger">
	    			<strong>Atenção</strong>
	    			<ul>
	    				<% for (var i=0; i<validacao.length; i++) { %>
	    					<li>
	    						 <%=validacao[i].msg%>
	    					</li>
	    				<% } %>
	    			</ul>
	    		</div>
	    	<% } %>
	    		
			<form class="form-cadastro" action = "/cadastrarLista" method="post">
			
									
				
					<div class="form-group">
						
						<label for="status">Status</label>
				
        				<ul>
        				<input type="radio" id="left-item" name="status" value="a_fazer"> A fazer
						</ul>
					
						<ul>
        				<input type="radio" id="left-item" name="status" value="fazendo"> Fazendo
						</ul>
					
						<ul>
        				<input type="radio" id="left-item" name="status" value="feito"> Feito
        				</ul>

					</div>
					
					
						<div class="form-group">
							<ul>
							<label for="tarefa">Tarefa</label>
							<input type="tarefa" value="<%=dadosForm.tarefa%>" class="form-control" id="tarefa" name="tarefa" placeholder="Tarefa">
							</ul>
						</div>
					

					
						<div class="form-group">
							<ul>
							<label for="descricao">Descrição</label>
							<input type="descricao" value="<%=dadosForm.descricao%>" class="form-control" id="descricao" name="descricao" placeholder="Descricao">
						
					</div>


					
							
							
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Confirmar cadastro</button>
				</div>
				

			</form>
					
	    </div>	
		
	</body>
</html>